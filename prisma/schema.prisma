// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户模型
model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 性能优化索引
  @@index([role])
  @@index([createdAt])
  @@index([username])
  @@index([email])
}

// 链接模型 - 独立存在，不关联用户
model Link {
  id          String   @id @default(cuid())
  title       String
  url         String   @unique
  description String?
  icon        String?  @db.Text
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  clickCount  Int      @default(0)
  
  // 从Tag合并的字段
  tags        String?  @db.Text // JSON格式存储标签数组
  category    String?  // 分类名称
  color       String?  // 分类颜色
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("links")
  
  // 性能优化索引
  @@index([isActive])
  @@index([order])
  @@index([clickCount])
  @@index([createdAt])
  @@index([updatedAt])
  @@index([title])
  @@index([url])
  @@index([category])
  @@index([isActive, order])
  @@index([isActive, category])
}

// 用户角色枚举
enum Role {
  ADMIN
  USER
}
